@model NonProfitCRM.Models.Volunteers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<!--Volunteers Edit Page-->

<h2>Edit</h2>

<h4>Volunteers</h4>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <v class="card-body">
                <form asp-action="Edit">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="example-text-input" asp-for="Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-phone-input" class="col-sm-4 col-form-label text-right" asp-for="PhoneNumber">Phone Number</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="startDate" asp-for="PhoneNumber" required>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-age-input" class="col-sm-4 col-form-label text-right" asp-for="Age">Age</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="startDate" asp-for="Age" required>
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="Email">Email</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="email" id="example-date-input" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="InstagramProfile">Instagram Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture" class="btn btn-primary"><i class="fab fa-instagram"></i></picture>
                                        </span>
                                        <input class="form-control" type="text" id="insta" asp-for="InstagramProfile">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="FacebookProfile">Facebook Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture" class="btn btn-primary"><i class="fab fa-facebook"></i></picture>
                                        </span>
                                        <input class="form-control" type="text" id="face" asp-for="FacebookProfile">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="TwitterProfile">Twitter Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture" class="btn btn-primary"><i class="fab fa-twitter"></i></picture>
                                        </span>
                                        <input class="form-control" type="text" id="twitter" asp-for="TwitterProfile">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-6">

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressLine1">
                                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressLine2">
                                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressStreet">
                                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressCity">
                                    <span asp-validation-for="AddressCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressState">
                                    <span asp-validation-for="AddressState" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressZipcode" required>
                                    <span asp-validation-for="AddressZipcode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country</label>
                                <div class="col-sm-8">
                                    <select class="custom-select" asp-for="AddressCountry" required>
                                        <option selected="">Select</option>
                                        <option value="India">India</option>
                                        <option value="USA">USA</option>
                                        <option value="USA">UAE</option>
                                    </select>
                                    <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <input type="submit" value="Save" class="col-sm-3 btn btn-primary" />

                                </div>
                            </div>
                        </div>
                   </div>

                </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->
<div>


    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

