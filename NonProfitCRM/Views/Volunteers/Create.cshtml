@model NonProfitCRM.Models.Volunteers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<script src="~/js/CreateClient.js"></script>
<!--Volunteers Create Page-->
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Volunteers</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </div>
            <h4 class="page-title">Add Volunteers</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="Name" id="example-text-input" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">

                                <label for="example-phone-input" class="col-sm-4 col-form-label text-right" asp-for="PhoneNumber">Phone Number<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">

                                    <input class="form-control" type="text" name="PhoneNumber" asp-for="PhoneNumber">
                                    @*<span asp-validation-for="PhoneNumber" class="text-danger"></span>*@
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="example-age-input" class="col-sm-4 col-form-label text-right" asp-for="Age">Age<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="Age" id="startDate" asp-for="Age" required>
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="Email">Email<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="email" name="Email" id="example-date-input" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>



                            @*<div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right" asp-for="FacebookProfile">Facebook Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" id="example-text-input" asp-for="FacebookProfile">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="InstagramProfile">Instagram Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="InstagramProfile">
                                    </div>
                                </div>
                                        entity.Propert
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="TwitterProfile">Twitter Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="TwitterProfile">
                                    </div>
                                </div>*@

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="InstagramProfile">Instagram Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture" class="btn btn-primary"><i class="fab fa-instagram"></i></picture>
                                        </span>
                                        <input class="form-control" placeholder="Enter Instagram URL" type="text" id="instagram" asp-for="InstagramProfile">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="FacebookProfile">Facebook Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture"  class="btn btn-primary"><i  class="fab fa-facebook"></i></picture>
                                        </span>
                                        <input placeholder="Enter Facebook URL" class="form-control" type="text" id="face" asp-for="FacebookProfile">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="TwitterProfile">Twitter Profile</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <picture type="picture" style="background-color:cyan" class="btn btn-primary"><i class="fab fa-twitter"></i></picture>
                                        </span>
                                        <input placeholder="Enter Twitter URL" class="form-control" type="url" id="twitter" asp-for="TwitterProfile">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-6">

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressLine1" asp-for="AddressLine1">
                                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressLine2" asp-for="AddressLine2">
                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressStreet" asp-for="AddressStreet">
                                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <select class="custom-select" name="AddressCountry" asp-for="AddressCountry" required>
                                        <option selected="">Select</option>
                                        <option value="India">INDIA</option>
                                        <option value="USA">USA</option>
                                        <option value="CHINA">CHINA</option>
                                        <option value="INDONESIA">INDONESIA</option>
                                        <option value="PAKISTAN">PAKISTAN</option>
                                        <option value="BRAZIL">BRAZIL</option>
                                        <option value="NIGERIA">NIGERIA</option>
                                        <option value="BANGLADESH">BANGLADESH</option>
                                        <option value="RUSSIA">RUSSIA</option>
                                        <option value="MAXICO">MAXICO</option>
                                        <option value="JAPAN">JAPAN</option>
                                        <option value="ETHIOPIA">ETHIOPIA</option>
                                        <option value="PHILIPPINES">PHILIPPINES</option>
                                        <option value="EGYPT">EGYPT</option>
                                        <option value="VIETNAM">VIETNAM</option>
                                    </select>
                                    <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressState" asp-for="AddressState">
                                    <span asp-validation-for="AddressState" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressCity" asp-for="AddressCity">
                                    <span asp-validation-for="AddressCity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="AddressZipcode" asp-for="AddressZipcode" required>
                                    <span asp-validation-for="AddressZipcode" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <input type="submit" value="Add" class="col-sm-3 btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}