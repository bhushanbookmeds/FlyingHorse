@model IEnumerable<NonProfitCRM.Models.Details_Donation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Donation</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </div>
          
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<h2>Index</h2>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.CampaignName)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.EventName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TransactionTypeId)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.DonationType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model =>model.GuestDonation)
                            </th>
                            
                            <th> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CampaignName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionTypeId)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DonationType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GuestDonation)
                            </td>
                            
                            <td>
                                <a asp-controller="Donatons" asp-action="Edit" asp-route-id=@item.Id class="mr-2">
                                    <i class="fas fa-edit text-blue font-16"></i>
                                </a>


                                <a asp-controller="Donatons" asp-action="Details" asp-route-id=@item.Id class=" mr-2">
                                    <i class="fas fa-book-open text-black-50"></i>
                                </a>

                                <a asp-controller="Donations" asp-action="Delete" asp-route-id=@item.Id class="mr-2">
                                <i class="fas fa-trash-alt text-danger font-16"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>