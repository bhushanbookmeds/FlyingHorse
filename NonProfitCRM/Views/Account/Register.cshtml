@model RegistrationModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Register" name="description" />
    <meta content="Mannatthemes" name="author" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/css/metisMenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>

<body class="account-body accountbg">

    <!-- Log In page -->
    <div class="row vh-100 ">
        <div class="col-lg-12  pr-0 align-self-center">
            <div class="row">
                <div class="col-lg-3 mx-auto">
                    <div class="card auth-card shadow-lg">
                        <div class="card-body">
                            <div class="px-3">
                                <div class="auth-logo-box">
                                    <a href="/" class="logo logo-admin"><img src="~/images/avatar-s-1.jpg" height="55" alt="logo" class="auth-logo"></a>
                                </div><!--end auth-logo-box-->

                                <div class="text-center auth-logo-text">
                                    <h4 class="mt-0 mb-3 mt-5">Register</h4>
                                </div> <!--end auth-logo-text-->


                                <form class="form-horizontal auth-form my-4" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" asp-action="Register">
                                    <div asp-validation-summary="ModelOnly" class="message-error" style="color:red">Unable to register user</div>
                                    <div class="form-group">
                                        <label asp-for="Name">Name</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-user"></i>
                                            </span>
                                            <input type="text" class="form-control" asp-for="Name" id="username" placeholder="Enter name">
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-mail"></i>
                                            </span>
                                            <input type="email" class="form-control" id="useremail" asp-for="Email" placeholder="Enter Email">
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="Password">Password</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-lock"></i>
                                            </span>
                                            <input type="password" class="form-control" asp-for="Password" id="userpassword" placeholder="Enter password">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-lock-open"></i>
                                            </span>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Enter Confirm Password">
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber">Mobile Number</label>
                                            <div class="input-group mb-3">
                                                <span class="auth-form-icon">
                                                    <i class="dripicons-phone"></i>
                                                </span>
                                                <input type="text" asp-for="PhoneNumber" class="form-control" id="phonenumber" placeholder="Enter Mobile Number">
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div><!--end form-group-->
                                    </div><!--end form-group-->

                                    <div class="form-group mb-0 row">
                                        <div class="col-12 mt-2">
                                            <button class="btn btn-primary btn-round btn-block waves-effect waves-light" type="submit">Register <i class="fas fa-sign-in-alt ml-1"></i></button>
                                        </div><!--end col-->
                                    </div> <!--end form-group-->
                                </form><!--end form-->
                            </div><!--end /div-->

                            <div class="m-3 text-center text-muted">
                                <p class="">Already have an account ? <a href="../authentication/auth-login.html" class="text-primary ml-2">Log in</a></p>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/waves.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>

    <script src="~/js/app.js"></script>

</body>
</html>