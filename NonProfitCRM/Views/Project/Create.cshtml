@model NonProfitCRM.Models.Project

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
   
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Projects</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </div>
            <h4 class="page-title">Add Project</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" id="myNewForm">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="NewName" asp-for="Name" required="required">
                                    <span asp-validation-for="Name" id="ItsName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="ProjectTypeId">Project Type<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">
                                   
                                    @Html.DropDownList("ProjectTypeId", (SelectList)ViewBag.ProjectType, "Select", new { @class = "form-control" })
                                    <span asp-validation-for="ProjectTypeId" id="ProjectType" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="example-number-input" class="col-sm-4 col-form-label text-right" asp-for="AllocatedFund">Allocated Fund<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="number"  asp-for="AllocatedFund" required>
                                    <span asp-validation-for="AllocatedFund" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Description">Description</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" asp-for="Description" rows="4" cols="45"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Date">Start Date<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="date" id="dtpDob" asp-for="Date" required>
                                    <span asp-validation-for="Date" id="DateofBirth" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Date">Close Date<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="date" id="dtpDob" asp-for="Date" required>
                                    <span asp-validation-for="Date" id="DateofBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressLine1">
                                <span asp-validation-for="AddressLine1"  class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressLine2">
                                <span asp-validation-for="AddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressStreet">
                                <span asp-validation-for="AddressStreet" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressCity">
                                <span asp-validation-for="AddressCity" id="AddressCity"  class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressState">
                                <span asp-validation-for="AddressState" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" id="AdressZipcode" asp-for="AddressZipcode" required>
                                <span asp-validation-for="AddressZipcode" id="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country<span class="mandate" style="color:red">*</span></label>
                            <div class="col-sm-8">
                                <select class="custom-select" asp-for="AddressCountry" required>
                                    <option selected="">Select</option>
                                    <option value="India">India</option>
                                    <option value="USA">USA</option>
                                </select>
                                <span asp-validation-for="AddressCountry" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-right">
                                <input type="button" id="submitbtn" onclick="CheckMandateValidate()" value="Add" class="col-sm-3 btn btn-primary" />
                            </div>
                        </div>
                      </div>
                   </div>
                </form>
            </div>
        </div>
    </div><!--end card-body-->
</div><!--end card-->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

