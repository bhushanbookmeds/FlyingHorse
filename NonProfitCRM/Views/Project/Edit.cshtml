@model NonProfitCRM.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";

}

<h2>Edit Project</h2>

<hr />
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="example-text-input" asp-for="Name" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label text-right" asp-for="ProjectTypeId">Project Type</label>
                            <div class="col-sm-8">

                                @Html.DropDownList("ProjectTypeId", (SelectList)ViewBag.ProjectType, "Select", new { @class = "form-control" })
                                <span asp-validation-for="ProjectTypeId" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="example-number-input" class="col-sm-4 col-form-label text-right" asp-for="AllocatedFund">Allocated Fund</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" id="startDate" asp-for="AllocatedFund" required>
                                <span asp-validation-for="AllocatedFund" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Description">Description</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" asp-for="Description" rows="4" cols="45"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Date">Start Date</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="date" id="example-text-input" asp-for="Date" required>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Date">Close Date</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="date" id="example-text-input" asp-for="Date" required>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressLine1">
                                <span asp-validation-for="AddressLine1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressLine2">
                                <span asp-validation-for="AddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressStreet">
                                <span asp-validation-for="AddressStreet" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressCity">
                                <span asp-validation-for="AddressCity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" asp-for="AddressState">
                                <span asp-validation-for="AddressState" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="number" asp-for="AddressZipcode" required>
                                <span asp-validation-for="AddressZipcode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country</label>
                            <div class="col-sm-8">
                                <select class="custom-select" asp-for="AddressCountry" required>
                                    <option selected="">Select</option>
                                    <option value="India">India</option>
                                    <option value="USA">USA</option>
                                </select>
                                <span asp-validation-for="AddressCountry" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-right">

                                <input type="submit" value="Save" class="col-sm-3 btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div><!--end card-body-->
 @*@Html.Partial("Expenditures", Model.Expenditures)*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

