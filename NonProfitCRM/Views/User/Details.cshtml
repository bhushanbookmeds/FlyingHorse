@model Users
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<link href="~/plugins/dropify.min.css" rel="stylesheet" />
<link href="~/plugins/magnific-popup.css" rel="stylesheet" />

<style>
    .noborder {
        border : none;
    }
    .fontbold{
        font-weight: 800;
    }
</style>

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Users</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ol>
            </div>
            <h4 class="page-title">Profile</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body  met-pro-bg">
                <div class="met-profile">
                    <div class="row">
                        <div class="col-lg-4 align-self-center mb-3 mb-lg-0">
                            <div class="met-profile-main">
                                <div class="met-profile-main-pic">
                                    <img src="~/images/user-4.jpg" alt="" class="rounded-circle">
                                    @*<span class="fro-profile_main-pic-change">
                                            <i class="fas fa-camera"></i>
                                        </span>*@
                                </div>
                                <div class="met-profile_user-detail">
                                    <h5 class="met-user-name">@Model.Name</h5>
                                    <p class="mb-0 met-user-name-post"></p>
                                </div>
                            </div>
                        </div><!--end col-->
                        <div class="col-lg-4 ml-auto">
                            <ul class="list-unstyled personal-detail">
                                <li class=""><i class="dripicons-phone mr-2 text-info font-18"></i> <b> phone </b> : @Html.DisplayFor(model => model.PhoneNumber)</li>
                                <li class="mt-2"><i class="dripicons-mail text-info font-18 mt-2 mr-2"></i> <b> Email </b> : @Html.DisplayFor(model => model.Email)</li>
                                <li class="mt-2"><i class="dripicons-location text-info font-18 mt-2 mr-2"></i> <b>Location</b> : @Html.DisplayFor(model => model.AddressCity), @Html.DisplayFor(model => model.AddressCountry)</li>
                            </ul>
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end f_profile-->
            </div><!--end card-body-->
            <div class="card-body">
                <ul class="nav nav-pills mb-0" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="general_detail_tab" data-toggle="pill" href="#general_detail">General</a>
                    </li>
                </ul>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div><!--end row-->
<div class="row">
    <div class="col-12">
        <div class="tab-pane fade show active" id="general_detail">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form id="form-horizontal" class="form-horizontal form-wizard-wrapper">
                                <h3>User Details</h3>
                                <fieldset>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label for="name" class="col-lg-3 col-form-label fontbold">Name :</label>
                                                <div class="col-lg-9">
                                                    <span class="form-control noborder"> @Model.Name </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label for="email" class="col-lg-3 col-form-label fontbold">Email : </label>
                                                <div class="col-lg-9">
                                                    <span class="form-control noborder"> @Model.Email </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label for="phoneNumber" class="col-lg-3 col-form-label fontbold">Phone Number :</label>
                                                <div class="col-lg-9">
                                                    <span class="form-control noborder"> @Model.PhoneNumber </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label for="organization" class="col-lg-3 col-form-label fontbold">Address :</label>
                                                <div class="col-lg-9">
                                                    @{ var address = Model.AddressStreet + " " + Model.AddressLine1 + " " + Model.AddressLine2 + " " + Model.AddressCity + " " + Model.AddressState + " " + Model.AddressCountry + " " + Model.AddressZipcode; }
                                                    <span class="form-control noborder"> @address </span>
                                                </div>
                                            </div><!--end form-group-->
                                        </div><!--end col-->
                                    </div><!--end row-->
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->

@section Scripts{
    <script src="~/plugins/dropify.min.js"></script>
    <script src="~/pages/jquery.profile.init.js"></script>

    <script src="~/plugins/isotope.pkgd.min.js"></script>
    <script src="~/plugins/masonry.pkgd.min.js"></script>
    <script src="~/plugins/jquery.magnific-popup.min.js"></script>
    <script src="~/pages/jquery.gallery.inity.js"></script>

    <script type="text/javascript">
        $("#updateProfileBtn").click(function () {
            var profilePic = $("#profile-picture-input-file").val();
            console.log(profilePic);

            var contactId = $("#ContactId").val();
            console.log(contactId);
        });
    </script>
}

