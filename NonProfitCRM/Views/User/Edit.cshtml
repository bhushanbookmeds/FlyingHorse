@model NonProfitCRM.Models.RegistrationModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@{
    var isAdmin = Context.User.IsInRole("Admin");
}
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Users</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
            <h4 class="page-title">Edit User</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                   
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="example-text-input" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-phone-input" class="col-sm-4 col-form-label text-right" asp-for="PhoneNumber">Phone Number</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="startDate" asp-for="PhoneNumber" required>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="Email">Email</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="email" id="example-date-input" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="Password">Password</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="password" id="example-date-input" asp-for="Password" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="ConfirmPassword">Confirm Password</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="password" id="example-date-input" asp-for="ConfirmPassword" required>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            @if (isAdmin)
                            {
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right" asp-for="OrgId">Organization</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownList("OrgId", (SelectList)ViewBag.Organizations, "Select Organization", new { @class = "form-control" })
                                        <span asp-validation-for="OrgId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right" asp-for="UserRoleId">User Role</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownList("UserRoleId", (SelectList)ViewBag.UserRoles, "Select Roles", new { @class = "form-control" })
                                        <span asp-validation-for="UserRoleId" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="AddressLine1">
                                        <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="AddressLine2">
                                    </div>
                                </div>
                                
                                <input type="hidden" asp-for="OrgId" />
                            }

                        </div>
                        <div class="col-lg-6">
                            @if (isAdmin)
                            {
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="AddressLine1">
                                        <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="AddressLine2">
                                    </div>
                                </div>
                            }
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressStreet">
                                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressCity">
                                    <span asp-validation-for="AddressCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressState">
                                    <span asp-validation-for="AddressState" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressZipcode" required>
                                    <span asp-validation-for="AddressZipcode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country</label>
                                <div class="col-sm-8">
                                    <select class="custom-select" asp-for="AddressCountry" required>
                                        <option selected="">Select</option>
                                        <option value="India">India</option>
                                        <option value="USA">USA</option>
                                    </select>
                                    <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <input type="submit" value="Submit" class="col-sm-3 btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
