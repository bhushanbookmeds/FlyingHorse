@model Organization

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- Page Content-->
<div class="page-content">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Super Admin</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Organizations</a></li>
                            <li class="breadcrumb-item active">Add Organization</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Add Organization</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div>
        <!-- end page title end breadcrumb -->


        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" id="example-text-input" asp-for="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-date-input" class="col-sm-4 col-form-label text-right" asp-for="StartDate">Start date</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="date" id="startDate" asp-for="StartDate">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-date-input" class="col-sm-4 col-form-label text-right" asp-for="ExpiryDate">Valid Until</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="date" id="example-date-input" asp-for="ExpiryDate">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country</label>
                                        <div class="col-sm-8">
                                            <select class="custom-select" asp-for="AddressCountry">
                                                <option selected="">Select</option>
                                                <option value="India">India</option>
                                                <option value="USA">USA</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressZipcode">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-lg-6">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressLine1">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressLine2">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressStreet">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressCity">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State</label>
                                        <div class="col-sm-8">
                                            <input class="form-control" type="text" asp-for="AddressState">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-12 text-right">
                                            <input type="submit" value="Add" class="col-sm-3 btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
        </div>

    </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

<script type="text/javascript">
    document.getElementById("startDate").valueAsDate = new Date();
</script>