@model Core.Domain.Donation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<h2>Edit Donation</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-controller="Donation" asp-action="Create">
                    <div class="row">
                        <div class="col-lg-9">

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">Donated In<span class="mandatory" id="nameStar" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-7">
                                    <input type="checkbox" />Campaign
                                    <input type="checkbox" style="margin-left:15px" />Event
                                </div>
                            </div>

                            <style>
                                .col-sm-7 {
                                    padding-top: 14px;
                                }
                            </style>

                            <script>
                                $('input[type="checkbox"]').on('change', function () {
                                    $('input[type="checkbox"]').not(this).prop('checked', false);
                                });
                            </script>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">Event Name</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("Events", new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Raise Fund for cancer patients", Value = "1"},
                                            new SelectListItem { Text = "Orphanage Donation", Value = "2"},
                                            new SelectListItem { Text = "NULL", Value = "0"},
                                        }, "Select Event")
                                    <span id="EventName" class="text-danger"> </span>

                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">Campaign Name</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("Campaigns", new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Raise Fund for cancer patients", Value = "1"},
                                            new SelectListItem { Text = "Orphanage Donation", Value = "2"},
                                            new SelectListItem { Text = "NULL", Value = "0"},
                                        }, "Select Campaign")
                                    <span id="CampaignName" class="text-danger"> </span>

                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right">Transaction Type</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("Transaction Type", new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Cash", Value = "1"},
                                            new SelectListItem { Text = "Online Banking", Value = "2"},
                                        }, "Select Transaction Type")
                                    <span id="Transaction Type" class="text-danger"> </span>

                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-age-input" class="col-sm-4 col-form-label text-right" asp-for="Amount">Amount<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="number" id="Amount" asp-for="Amount" required="required" placeholder="Enter Donation Amount">
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="GuestEmail">Email<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="email" name="GuestEmail" id="example-date-input" asp-for="GuestEmail" required="required" placeholder="Enter Email here">
                                    <span asp-validation-for="GuestEmail" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-age-input" class="col-sm-4 col-form-label text-right" asp-for="Date">Date<span class="mandatory" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="date" id="Date" asp-for="Date" required="required" placeholder="Enter Donation Date">
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">

                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="RecurringDonation">RecurringDonation<span class="mandate" style="color:red;font-size:20px">*</span></label>

                                <div class="col-sm-6" id="RecurringDonation">

                                    <input name="RecurringDonation" type="radio" value="True" style="margin-right:1px" />  Yes
                                    <input name="RecurringDonation" type="radio" value="False" style="margin-left:15px" /> No
                                    <span asp-validation-for="RecurringDonation" id="radioRecurring" class="text-danger"></span>
                                </div>
                            </div>

                            <style>
                                .col-sm-6 {
                                    padding-top: 16px;
                                }
                            </style>

                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <input type="submit" value="Add" class="col-sm-3 btn btn-primary" />
                                </div>
                            </div>

                        </div>

                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div>

<!--Prive image after upload on same page-->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
