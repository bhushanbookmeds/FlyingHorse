@model Core.Domain.Donation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
}

<h2>Donation</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Contact</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </div>
            <h2 class="page-title">Add a Donation</h2>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>

<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-controller="Donation" asp-action="Create">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" >Contact Name<span class="mandatory" id="nameStar" style="color:Red;font-size:20px">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" name="Name" id="Name"  required="required" placeholder="Type your name here" onkeyup="check()" />
                                    <span class="text-danger"></span>

                                </div>
                            </div>  
                            
                            <div class="form-group row">
                                <div class="col-sm-8">
                                    @Html.CheckBox("DonatedIn")
                                </div>
                            </div>
                            
                            

                        </div>

                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div>

<!--Prive image after upload on same page-->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
