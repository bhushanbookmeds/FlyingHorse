
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- App favicon -->
<link rel="shortcut icon" href="~/images/favicon.ico">

<link href="~/plugins/jvectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet">

<!--Chartist Chart CSS -->
<link rel="stylesheet" href="~/plugins/chartist/css/chartist.min.css">

<!-- App css -->
<link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/css/icons.css" rel="stylesheet" type="text/css" />
<link href="~/css/metisMenu.min.css" rel="stylesheet" type="text/css" />
<link href="~/css/style.css" rel="stylesheet" type="text/css" />

<!-- Page Content--> 
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Non Profit CRM</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Dashboard</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->

        <div class="row">
            <div class="col-lg-3">
                <div class="card card-eco">
                    <div class="card-body">
                        <h4 class="title-text mt-0">New Contacts</h4>
                        <div class="d-flex justify-content-between">
                            <h3 class="font-weight-bold">@ViewBag.NewContacts</h3>
                            <i class="dripicons-user-group card-eco-icon text-pink align-self-center"></i>
                        </div>
                        <p class="mb-0 text-muted text-truncate"><span class="text-success"><i class="mdi mdi-trending-up"></i></span>Current Month</p>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
            <div class="col-lg-3">
                <div class="card card-eco">
                    <div class="card-body">
                        <h4 class="title-text mt-0">Total Donors</h4>
                        <div class="d-flex justify-content-between">
                            <h3 class="font-weight-bold">@ViewBag.TotalDonors</h3>
                            <i class="dripicons-cart card-eco-icon text-secondary  align-self-center"></i>
                        </div>
                        <p class="mb-0 text-muted text-truncate"><span class="text-success"><i class="mdi mdi-trending-up"></i></span>Current Month</p>

                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
            <div class="col-lg-3">
                <div class="card card-eco">
                    <div class="card-body">
                        <h4 class="title-text mt-0">Total Donations</h4>
                        <div class="d-flex justify-content-between">
                            <h3 class="font-weight-bold">@ViewBag.TotalDonations</h3>
                            <i class="dripicons-jewel card-eco-icon text-warning  align-self-center"></i>
                        </div>
                        <p class="mb-0 text-muted text-truncate"><span class="text-danger"><i class="mdi mdi-trending-down"></i></span>Current Month</p>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
            <div class="col-lg-3">
                <div class="card card-eco">
                    <div class="card-body">
                        <h4 class="title-text mt-0">Total Expenditure</h4>
                        <div class="d-flex justify-content-between">
                            <h3 class="font-weight-bold">@ViewBag.TotalExpenditures</h3>
                            <i class="dripicons-wallet card-eco-icon text-success  align-self-center"></i>
                        </div>
                        <p class="mb-0 text-muted text-truncate"><span class="text-success"><i class="mdi mdi-trending-up"></i></span> Current Month</p>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end col-->
        </div><!--end row-->

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <span>Donation Graph</span>
                        <div class="float-right">
                            <button type="button" id="btnWeek" class="btn btn-outline-info btn-sm active" onclick="getWeekData()">Weekly</button>
                            <button type="button" id="btnMonth" class="btn btn-outline-info btn-sm" onclick="getMonthData()">monthly</button>
                            <button type="button" id="btnYear" class="btn btn-outline-info btn-sm" onclick="getYearData()">yearly</button>
                        </div>
                        <p class="text-muted  mb-3 d-inline-block text-truncate w-100">
                            
                        </p>
                        <div id="stacked-bar-chart" class="ct-chart ct-golden-section"></div>
                    </div><!--end card-body-->
                </div><!--end-card-->
            </div> <!-- end col -->

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Donation pie chart</h4>
                        <p class="text-muted  mb-3 d-inline-block text-truncate w-100">
                            The pie chart shows the aggregate values for last 12 months.
                        </p>
                        <div id="simple-pie" class="ct-chart ct-golden-section simple-pie-chart-chartist"></div>
                    </div><!--end card-body-->
                </div><!--end-card-->
            </div> <!-- end col -->

        </div><!--end row-->
        
    </div><!-- container -->

    
<!-- end page content -->

<script src="~/plugins/moment/moment.js"></script> 

<!--Chartist Chart-->
<script src="~/plugins/chartist/js/chartist.min.js"></script>
<script src="~/plugins/chartist/js/chartist-plugin-tooltip.min.js"></script>
<script src="~/pages/jquery.chartist.init.js"></script>
