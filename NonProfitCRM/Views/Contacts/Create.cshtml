@model NonProfitCRM.Models.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Contacts</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </div>
            <h4 class="page-title">Add Contact</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="example-text-input" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="ContactTypeId">Type</label>
                                @*<div class="col-sm-8">
                                                                    @Html.DropDownList("ContactTypeId", new SelectList((System.Collections.IEnumerable)ViewData["ContactTypeId"]), "Select", new { @class = "form-control" });
                                    @Html.DropDownList("ContactTypeId", new SelectList(ViewBag.ContactType, "Id", "Name"), "Name", new { @class = "form-control" })
                                                                    @Html.DropDownListFor(x => x.ContactTypeId, new SelectList(ViewBag.ContactType, "Id", "Name"))
                                                                </div>*@
                                <div class="col-sm-8">
                                    <select class="custom-select" asp-for="ContactTypeId">
                                        <option selected="">Select</option>
                                        <option value="1">Individual</option>
                                        <option value="2">Organization</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-phone-input" class="col-sm-4 col-form-label text-right" asp-for="PhoneNumber">Phone Number</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="startDate" asp-for="PhoneNumber" required>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-4 col-form-label text-right" asp-for="Email">Email</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="email" id="example-date-input" asp-for="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>



                            @*<div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right" asp-for="FacebookProfile">Facebook Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" id="example-text-input" asp-for="FacebookProfile">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="InstagramProfile">Instagram Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="InstagramProfile">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="TwitterProfile">Twitter Profile</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="TwitterProfile">
                                    </div>
                                </div>*@

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine1">Address Line 1</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressLine1">
                                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressLine2">Address Line 2</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressLine2">
                                </div>
                            </div>


                        </div>

                        <div class="col-lg-6">

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressStreet">Street</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressStreet">
                                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressCity">City</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressCity">
                                    <span asp-validation-for="AddressCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressState">State</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressState">
                                    <span asp-validation-for="AddressState" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="AddressZipcode">Zip code</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="AddressZipcode" required>
                                    <span asp-validation-for="AddressZipcode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="AddressCountry">Country</label>
                                <div class="col-sm-8">
                                    <select class="custom-select" asp-for="AddressCountry" required>
                                        <option selected="">Select</option>
                                        <option value="India">India</option>
                                        <option value="USA">USA</option>
                                    </select>
                                    <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <input type="submit" value="Add" class="col-sm-3 btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
