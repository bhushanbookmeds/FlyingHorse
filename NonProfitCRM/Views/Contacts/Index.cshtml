<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Contacts</a></li>
                    <li class="breadcrumb-item active">View All</li>
                </ol>
            </div>
            <h4 class="page-title">Contacts</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <a asp-action="Create" button style='margin-right:16px' class="btn btn-primary px-4 btn-rounded float-right mt-0 mb-3">+ Add New &nbsp;</a>

                <a asp-action="Import" button style='margin-right:16px' class="btn btn-primary px-4 btn-rounded float-right mt-0 mb-3">Import</a>

                <h4 class="header-title mt-0">Contacts Details</h4>
                <div class="table-responsive dash-social">
                    <table id="datatable" class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone No</th>
                                <th>Donor Score</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Social</th>
                                <th>Action</th>
                            </tr><!--end tr-->
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="" class="thumb-sm rounded-circle mr-2">
                                    <a asp-action="Details" asp-route-Id=@item.Id style="text-transform: capitalize;">@Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.DonorScore)</td>
                                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@Html.DisplayFor(modelItem => item.AddressCountry)</td>
                                <td>@Html.DisplayFor(modelItem => item.AddressState)</td>
                                <td>@Html.DisplayFor(modelItem => item.AddressCity)</td>

                                <td>
                                    
                                        <a href="//@item.FacebookProfile" target="_blank"><i class="fab fa-facebook" style="color:blue"></i></a>
                                        <a href="//@item.InstagramProfile" target="_blank"><i class="fab fa-instagram" style="color:hotpink"></i></a>
                                        <a href="//@item.TwitterProfile" target="_blank"><i class="fab fa-twitter" style="color:deepskyblue",'margin-top:16px'></i></a>
                                       
                                </td>

                                <td>
                                    <a asp-controller="Contacts" asp-action="Edit" asp-route-Id=@item.Id class="mr-2"><i class="fas fa-edit text-info font-16"></i></a>

                                    <a asp-controller="Contacts" asp-action="Delete" asp-route-Id="@item.Id"><i class="fas fa-trash-alt text-danger font-16"></i></a>

                                </td>
                            </tr><!--end tr-->
                            }
                        </tbody>
                    </table>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!--end col-->
</div><!--end row-->