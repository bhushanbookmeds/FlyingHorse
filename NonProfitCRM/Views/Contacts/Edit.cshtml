                        <label for="example-phone-input" class="col-sm-4 col-form-label text-right" asp-for="PhoneNumber">Phone Number <span class="mandate" style="color:red">*</span> </label>
                        <div class="col-sm-8">
                            <input class="form-control" type="tel" id="PhoneNumber" asp-for="PhoneNumber" required>

                            <span asp-validation-for="PhoneNumber" id="MobileNumber" class="text-danger"></span>
                        </div>
                    </div>*@
