<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Create" id="myform">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-4 col-form-label text-right" asp-for="Name">Name<span class="mandate" style="color:red">*</span></label>
                                <div class="col-sm-8">

                                    <input class="form-control" type="text" id="Name" asp-for="Name" required="required" placeholder="Type your name here">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="Name" data-valmsg-replace="true" id="txtName"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-right" asp-for="ContactTypeId">Type <span class="mandate" style="color:red">*</span> </label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("ContactTypeId", (SelectList)ViewBag.ContactTypeId, "Select", new { @class = "form-control", required = true })
                                    <span asp-validation-for="ContactTypeId" id="contacttype" class="text-danger"></span>

                                </div>


                                @*<div class="col-sm-8">
                            <select class="custom-select" asp-for="ContactTypeId">
